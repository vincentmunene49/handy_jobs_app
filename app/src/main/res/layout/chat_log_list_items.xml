<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/sender_profile_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="1"
        app:layout_constraintWidth_percent=".15"
        android:layout_marginStart="6dp"
        app:civ_border_color="#00000000"
        app:civ_border_width="2dp"
        app:civ_circle_background_color="#FBFBFB"
        android:layout_marginTop="8dp"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:gravity="center_vertical"
        android:id="@+id/tv_sender_name"
        app:layout_constraintStart_toEndOf="@+id/sender_profile_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/sender_profile_image"
        app:layout_constraintBottom_toBottomOf="@+id/sender_profile_image"
        android:padding="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>